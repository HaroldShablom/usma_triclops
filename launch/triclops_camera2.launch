<!--igvc_run.launch-->
<launch>


  <node pkg="tf" type="static_transform_publisher" name="map_to_odom"
        args="0 0 0.39 0 0.55 0 map bumblebee2 100" />


  <node pkg="triclops_vision" type="triclops_camera_driver" name="triclops_camera_driver" output="screen">
  </node> 
  
  <node pkg="image_view" type="image_view" name="Left_line_image" output="screen" args="image:=/camera/left/linefiltered" />
  <node pkg="image_view" type="image_view" name="Left_rgb_image" output="screen" args="image:=/camera/left/rgb" />

<!-- Start an rviz node with a custom configuration  -->
<node pkg="rviz" type="rviz" output="screen" name="rviz" args="-d $(find triclops_vision)/launch/triclops_camera.rviz"/>

</launch>

